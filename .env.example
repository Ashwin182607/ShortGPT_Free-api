# API Keys
PEXELS_API_KEY=your_pexels_api_key
PIXABAY_API_KEY=your_pixabay_api_key
UNSPLASH_API_KEY=your_unsplash_api_key

# Cache Directories
MODEL_CACHE_DIR=~/.cache/shortfactory/models
ASSET_CACHE_DIR=~/.cache/shortfactory/assets

# Asset Settings
MAX_VIDEO_DURATION=60  # Maximum video duration in seconds
MAX_ASSET_SIZE=100    # Maximum asset size in MB
ASSET_QUALITY=high    # Asset quality (low, medium, high)

# Model Settings
USE_GPU=true          # Use GPU for model inference if available
MODEL_PRECISION=fp16  # Model precision (fp16, fp32)
BATCH_SIZE=1         # Batch size for model inference

# Output Settings
OUTPUT_FORMAT=mp4     # Output video format
OUTPUT_QUALITY=high   # Output quality (low, medium, high)
OUTPUT_FPS=30        # Output frames per second

# Web Interface
PORT=7860            # Web interface port
HOST=0.0.0.0         # Web interface host
DEBUG=false          # Enable debug mode
